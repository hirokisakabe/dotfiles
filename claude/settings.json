{
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(rg:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(wc:*)",
      "Bash(cat:*)",
      "Bash(mkdir:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(npm outdated)",
      "Bash(npm audit:*)",
      "Bash(npm install:*)",
      "Bash(npm uninstall:*)",
      "WebFetch(domain:*)",
      "WebSearch"
    ],
    "deny": ["Read(./.env)", "Read(./.env.*)"],
    "ask": ["Bash(gh pr merge:*)", "Bash(git push:*)"]
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Funk.aiff"
          }
        ]
      }
    ]
  }
}
